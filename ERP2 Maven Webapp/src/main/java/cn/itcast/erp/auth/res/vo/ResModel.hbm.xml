<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC
        '-//Hibernate/Hibernate Mapping DTD 3.0//EN'
        'http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd'>
<hibernate-mapping>
    <class name="cn.itcast.erp.auth.res.vo.ResModel" table="tbl_res">
        <id name="uuid">
            <generator class="native" />
        </id>
        <property name="name"/>
        <property name="text"/>
        <!-- 多对多 -->
        <set name="roles" table="tbl_res_role">
        	<key column="resUuid"/>
        	<many-to-many class="cn.itcast.erp.auth.role.vo.RoleModel" column="roleUuid"/>
        </set>
    </class>
</hibernate-mapping>
